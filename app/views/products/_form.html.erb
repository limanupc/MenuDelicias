<%= simple_form_for ([@product]), :html => { class: 'form-horizontal', multipart: true } do |f| %>

  <%= f.association :category, label_method: :description %>

  <%= error_span(@product[:category]) %>
  
  <%= f.input :name %>
  <%= error_span(@product[:name]) %>
  <%= f.input :description %>
  <%= error_span(@product[:description]) %>
  <%= f.input :price %>
  <%= error_span(@product[:price]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                products_path, :class => 'btn btn-default' %>
<% end %>
