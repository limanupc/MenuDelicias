<%= simple_form_for @order, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :Branch_id %>
  <%= error_span(@order[:Branch_id]) %>
  <%= f.input :Customer_id %>
  <%= error_span(@order[:Customer_id]) %>
  <%= f.input :date_application %>
  <%= error_span(@order[:date_application]) %>
  <%= f.input :delivery_date %>
  <%= error_span(@order[:delivery_date]) %>
  <%= f.input :delivery_time %>
  <%= error_span(@order[:delivery_time]) %>
  <%= f.input :total %>
  <%= error_span(@order[:total]) %>
  <%= f.input :flag %>
  <%= error_span(@order[:flag]) %>
  <%= f.input :staff %>
  <%= error_span(@order[:staff]) %>
  <%= f.input :Document_type_id %>
  <%= error_span(@order[:Document_type_id]) %>
  <%= f.input :series %>
  <%= error_span(@order[:series]) %>
  <%= f.input :date_voucher %>
  <%= error_span(@order[:date_voucher]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                orders_path, :class => 'btn btn-default' %>
<% end %>
