<%= simple_form_for @branch, :html => { class: 'form-horizontal', multipart: true } do |f| %>
  <%= f.input :name %>
  <%= error_span(@branch[:name]) %>
  <%= f.input :address %>
  <%= error_span(@branch[:address]) %>
  
  <%= f.association :Location, label_method: :description %>
  <%= error_span(@branch[:Location]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                branches_path, :class => 'btn btn-default' %>
<% end %>
