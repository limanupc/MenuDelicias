<h1>Listing customer_adresses</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Address</th>
      <th>Location</th>
      <th>Reference</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_adresses.each do |customer_adress| %>
      <tr>
        <td><%= customer_adress.Customer %></td>
        <td><%= customer_adress.address %></td>
        <td><%= customer_adress.Location %></td>
        <td><%= customer_adress.reference %></td>
        <td><%= customer_adress.phone %></td>
        <td><%= link_to 'Show', customer_adress %></td>
        <td><%= link_to 'Edit', edit_customer_adress_path(customer_adress) %></td>
        <td><%= link_to 'Destroy', customer_adress, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

