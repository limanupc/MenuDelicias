<%= simple_form_for @location, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :ubi_codigo %>
  <%= error_span(@location[:ubi_codigo]) %>
  <%= f.input :description %>
  <%= error_span(@location[:description]) %>
  <%= f.input :department %>
  <%= error_span(@location[:department]) %>
  <%= f.input :province %>
  <%= error_span(@location[:province]) %>
  <%= f.input :distric %>
  <%= error_span(@location[:distric]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                locations_path, :class => 'btn btn-default' %>
<% end %>
